{
  "compilerOptions": {
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": false,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": false,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "incremental": true,
    "removeComments": false,
    "plugins": [{ "name": "@effect/language-service" }],
    "paths": {
      "@simpsons-db/shared": ["./packages/shared/src/index.js"],
      "@simpsons-db/shared/*": ["./packages/shared/src/*"],
      "@simpsons-db/database": ["./packages/database/src/index.js"],
      "@simpsons-db/database/*": ["./packages/database/src/*"],
      "@simpsons-db/domain": ["./packages/domain/src/index.js"],
      "@simpsons-db/domain/*": ["./packages/domain/src/*"],
      "@simpsons-db/ai-services": ["./packages/ai-services/src/index.js"],
      "@simpsons-db/ai-services/*": ["./packages/ai-services/src/*"],
      "@simpsons-db/video-processor": [
        "./packages/video-processor/src/index.js"
      ],
      "@simpsons-db/video-processor/*": ["./packages/video-processor/src/*"],
      "@simpsons-db/api": ["./packages/api/src/index.js"],
      "@simpsons-db/api/*": ["./packages/api/src/*"],
      "@simpsons-db/app-api": ["./apps/api/src/index.js"],
      "@simpsons-db/app-api/*": ["./apps/api/src/*"],
      "@simpsons-db/cli": ["./packages/cli/src/index.js"],
      "@simpsons-db/cli/*": ["./packages/cli/src/*"]
    }
  }
}
