{
  "name": "@simpsons-db/cli",
  "version": "0.1.0",
  "type": "module",
  "description": "CLI tool for The Simpsons Database",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "simpsons-db": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "test": "vitest",
    "type-check": "tsc --noEmit",
    "coverage": "vitest --coverage"
  },
  "dependencies": {
    "@effect/cli": "latest",
    "@effect/platform": "latest",
    "@effect/platform-node": "latest",
    "@simpsons-db/ai-services": "workspace:*",
    "@simpsons-db/database": "workspace:*",
    "@simpsons-db/domain": "workspace:*",
    "@simpsons-db/shared": "workspace:*",
    "@simpsons-db/video-processor": "workspace:*",
    "effect": "latest"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
