{
  "name": "@simpsons-db/database",
  "version": "0.1.0",
  "type": "module",
  "description": "Database schemas and migrations for The Simpsons Database",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./schemas": {
      "import": "./dist/schemas/index.js",
      "types": "./dist/schemas/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "type-check": "tsc -b tsconfig.json",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "tsx src/migrate.ts",
    "db:seed": "tsx src/seed.ts",
    "db:reset": "tsx src/reset.ts",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@effect/platform": "*",
    "@effect/platform-node": "*",
    "@effect/sql": "*",
    "@effect/sql-drizzle": "^0.43.0",
    "@effect/sql-pg": "*",
    "@simpsons-db/shared": "workspace:*",
    "drizzle-orm": "^0.43.0",
    "effect": "*",
    "pg": "8.13.1",
    "postgres": "^3.4.7"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  }
}
