{
  "name": "@simpsons-db/domain",
  "version": "0.1.0",
  "type": "module",
  "description": "Domain layer for The Simpsons Database",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.src.json",
    "dev": "tsc -p tsconfig.src.json --watch",
    "clean": "rm -rf dist",
    "test": "vitest",
    "coverage": "vitest --coverage",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@effect/platform": "^0.90.6",
    "@effect/sql": "latest",
    "@simpsons-db/database": "workspace:*",
    "@simpsons-db/shared": "workspace:*",
    "effect": "latest"
  },
  "devDependencies": {
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}
